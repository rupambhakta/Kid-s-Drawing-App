<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F00ACC1"
    tools:context=".MainActivity">
    <FrameLayout
        android:id="@+id/fl_drawing_view_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:padding="1dp"
        android:background="@drawable/background_drawing_view_layout"
        app:layout_constraintBottom_toTopOf="@+id/ll_paint_colors"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

<!--        <ImageView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:id="@+id/iv_background"-->
<!--            android:scaleType="centerCrop"-->

<!--            android:src="@drawable/image"-->
<!--            />-->
        <com.example.kidsdrawingapp.DrawingView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/drawing_view"
            android:background="#fff"
            />

    </FrameLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ll_paint_colors"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/ib_brush"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fl_drawing_view_container"
        tools:ignore="NotSibling">


        <ImageButton
            android:background="@color/skin"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:src="@drawable/pallate_normal"
            android:tag="@color/skin"
            android:onClick="paintClicked"
            />
        <ImageButton
            android:background="@color/black"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:src="@drawable/pallate_normal"
            android:tag="@color/black"
            android:onClick="paintClicked"
            />
        <ImageButton
            android:background="@color/red"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:src="@drawable/pallate_normal"
            android:tag="@color/red"
            android:onClick="paintClicked"
            />
        <ImageButton
            android:background="@color/green"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:src="@drawable/pallate_normal"
            android:tag="@color/green"
            android:onClick="paintClicked"
            />
        <ImageButton
            android:background="@color/blue"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:src="@drawable/pallate_normal"
            android:tag="@color/blue"
            android:onClick="paintClicked"
            />
        <ImageButton
            android:background="@color/yellow"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:src="@drawable/pallate_normal"
            android:tag="@color/yellow"
            android:onClick="paintClicked"
            />

        <ImageButton
            android:background="@color/lollipop"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:src="@drawable/pallate_normal"
            android:tag="@color/lollipop"
            android:onClick="paintClicked"/>
        <ImageButton
            android:background="@color/white"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:src="@drawable/pallate_normal"
            android:tag="@color/white"
            android:onClick="paintClicked"
            />

        <ImageButton
            android:background="@color/random"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:src="@drawable/pallate_normal"
            android:tag="@color/random"
            android:onClick="paintClicked"
            />

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/ll_paint_colors"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:orientation="horizontal"
    android:gravity="center">

<!--<ImageButton-->
<!--    android:id="@+id/ib_gallery"-->
<!--    android:layout_width="40dp"-->
<!--    android:layout_height="40dp"-->
<!--    android:layout_margin="5dp"-->
<!--    android:scaleType="fitXY"-->
<!--    android:background="#ECF0F1"-->
<!--    android:src="@drawable/gallery"-->
<!--    android:layout_marginEnd="5dp" />-->

    <ImageButton
        android:id="@+id/ib_undo"
        android:background="#ECF0F1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:src="@drawable/undo_img"
        android:scaleType="fitXY"
        android:layout_marginStart="5dp" />

    <ImageButton
        android:id="@+id/ib_brush"
        android:background="#ECF0F1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:src="@drawable/baseline_brush_24"
        android:scaleType="fitXY"
        android:layout_marginStart="5dp" />
</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>